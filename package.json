{
  "name": "seamless-auth-api",
  "version": "1.0.0",
  "description": "Seamless Auth API - A web application server for supporting a Seamless Auth server instance.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exitcrash src/server.ts",
    "docker": "docker compose up -d",
    "docker.down": "docker-compose down",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "build": "tsc",
    "test": "vitest run",
    "test:coverage": "jest --coverage",
    "db:create": "npx sequelize-cli db:create",
    "db:drop": "npx sequelize-cli db:drop",
    "db:refresh": "npx sequelize-cli db:drop && npx sequelize-cli db:create",
    "migrate:create": "npx sequelize-cli migration:generate --name",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:down": "npx sequelize-cli db:migrate:undo",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npx sequelize-cli db:migrate",
    "seed:run": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fells-code/seamless-auth-api.git"
  },
  "author": "Fells Code LLC",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/fells-code/seamless-auth-api/issues"
  },
  "homepage": "https://github.com/fells-code/seamless-auth-api#readme",
  "dependencies": {
    "@sequelize/postgres": "^7.0.0-alpha.46",
    "@simplewebauthn/server": "^13.1.1",
    "@types/bcrypt": "^6.0.0",
    "base64url": "^3.0.1",
    "bcrypt-ts": "^7.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.0",
    "express-slow-down": "^2.0.3",
    "helmet": "^8.1.0",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "libphonenumber-js": "^1.12.7",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sequelize-cli": "^6.6.2",
    "validator": "^13.15.0",
    "winston": "^3.14.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.25.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.24",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.18.12",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.18.2",
    "vitest": "^4.0.3"
  }
}
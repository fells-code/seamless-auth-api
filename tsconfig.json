{
  "compilerOptions": {
    "types": ["jest", "node"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "jest.config.ts", "vitest.config.ts", "tests"]
}
